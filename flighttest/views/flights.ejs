<!DOCTYPE html>
<html>
<head>
    <title>Flight List</title>
    <!-- Add any necessary CSS or JS links here -->
</head>
<body>
    <h1>List of Flights</h1>
    <% if (flights.length === 0) { %>
        <p>No flights available.</p>
    <% } else { %>
        <ul>
            <% flights.forEach(function(flight) { %>
                <li>
                    Flight Number: <%= flight.flightNumber %>, Airline: <%= flight.airline %>, Destination: <%= flight.destination %>
                    <!-- Add other flight details here -->
                    <!-- Link to update the flight -->
                    <a href="/flights/edit/<%= flight._id %>">Update</a>
                    <!-- Form to delete the flight -->
                    <form action="/api/flights/<%= flight._id %>?_method=DELETE" method="post" onsubmit="return confirm('Are you sure you want to delete this flight?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete">
</form>

                </li>
            <% }); %>
        </ul>
    <% } %>
    <a href="/">Back to Home</a>
    <!-- Include method-override script if needed -->
    <script src="https://unpkg.com/method-override"></script>
</body>
</html>

